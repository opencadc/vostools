<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

    <display-name>downloadManager</display-name>
    
    <servlet>
        <load-on-startup>1</load-on-startup>

        <servlet-name>logControl</servlet-name>
        <servlet-class>ca.nrc.cadc.log.LogControlServlet</servlet-class>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>info</param-value>
        </init-param>
        <init-param>
            <param-name>logLevelPackages</param-name>
            <param-value>
                ca.nrc.cadc.dlm
                ca.nrc.cadc.net
                ca.nrc.cadc.auth
            </param-value>
        </init-param>
    </servlet>

    <servlet>
        <load-on-startup>2</load-on-startup>
        <servlet-name>download</servlet-name>
        <servlet-class>ca.nrc.cadc.dlm.server.DispatcherServlet</servlet-class>
    </servlet>

    <servlet>
        <load-on-startup>2</load-on-startup>
        <servlet-name>urlList</servlet-name>
        <servlet-class>ca.nrc.cadc.dlm.server.UrlListServlet</servlet-class>
    </servlet>

    <servlet>
        <load-on-startup>2</load-on-startup>
        <servlet-name>JavaWebstart</servlet-name>
        <servlet-class>ca.nrc.cadc.dlm.server.JavaWebStartServlet</servlet-class>
    </servlet>

    <!-- map paths to servlets -->
    
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JavaWebstart</servlet-name>
        <url-pattern>/javaWebstart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JavaWebstart</servlet-name>
        <url-pattern>/DownloadManager.jnlp</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>urlList</servlet-name>
        <url-pattern>/urlList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logControl</servlet-name>
        <url-pattern>/logControl</url-pattern>
    </servlet-mapping>
    
</web-app>
