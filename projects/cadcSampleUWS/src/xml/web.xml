<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

    <!-- use simplest implementations from cadcUWS -->
    <context-param>
        <param-name>ca.nrc.cadc.uws.JobExecutor</param-name>
        <param-value>ca.nrc.cadc.uws.ThreadExecutor</param-value>
    </context-param>
    <context-param>
        <param-name>ca.nrc.cadc.uws.JobManager</param-name>
        <param-value>ca.nrc.cadc.uws.BasicJobManager</param-value>
    </context-param>
    <context-param>
        <param-name>ca.nrc.cadc.uws.JobPersistence</param-name>
        <param-value>ca.nrc.cadc.uws.InMemoryPersistence</param-value>
    </context-param>
    
    <!-- the actual job code -->
    <context-param>
        <param-name>ca.nrc.cadc.uws.JobRunner</param-name>
        <param-value>ca.nrc.cadc.uws.sample.HelloWorld</param-value>
    </context-param>

    <!--
      Each of the Restlet servlets need to have their respective Restlet
      attributes set properly.
     -->
    <servlet>
      <servlet-name>AsyncServlet</servlet-name>
      <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>

      <init-param>
        <param-name>org.restlet.application</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSAsyncApplication</param-value>
      </init-param>

      <init-param>
        <param-name>org.restlet.attribute.component</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSAsyncComponent</param-value>
      </init-param>

      <init-param>
        <param-name>org.restlet.attribute.server</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSAsyncServer</param-value>
      </init-param>

      <init-param>
        <param-name>org.restlet.attribute.application</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSAsyncApplication</param-value>
      </init-param>
    </servlet>

    <servlet>
      <servlet-name>SyncServlet</servlet-name>
      <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>

      <init-param>
        <param-name>org.restlet.application</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSSyncApplication</param-value>
      </init-param>

      <init-param>
        <param-name>org.restlet.attribute.component</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSSyncComponent</param-value>
      </init-param>

      <init-param>
        <param-name>org.restlet.attribute.server</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSSyncServer</param-value>
      </init-param>

      <init-param>
        <param-name>org.restlet.attribute.application</param-name>
        <param-value>ca.nrc.cadc.uws.web.restlet.UWSSyncApplication</param-value>
      </init-param>
    </servlet>

    <servlet>
      <servlet-name>doc</servlet-name>
      <jsp-file>doc.jsp</jsp-file>
    </servlet>
  
    <servlet>
        <!--
            To make sure the logging level gets set before any
            logging gets done, set load-on-startup to a smaller
            whole number than is used for any other servlet
            in this webapp.  This assumes Tomcat 5.5 or later.
        -->
        <servlet-name>logControl</servlet-name>
        <servlet-class>ca.nrc.cadc.log.LogControlServlet</servlet-class>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>info</param-value>
        </init-param>
        <init-param>
            <param-name>logLevelPackages</param-name>
            <param-value>
                ca.nrc.cadc.log
                ca.nrc.cadc.uws
            </param-value>
        </init-param>
      <load-on-startup>1</load-on-startup>
    </servlet>    

  <!-- the UWS Endpoints -->
	<servlet-mapping>
 		<servlet-name>AsyncServlet</servlet-name>
 		<url-pattern>/async/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
 		<servlet-name>SyncServlet</servlet-name>
 		<url-pattern>/sync/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>logControl</servlet-name>
		<url-pattern>/loggingConfig</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
 		<servlet-name>doc</servlet-name>
 		<url-pattern>index.html</url-pattern>
	</servlet-mapping>

  <servlet-mapping>
      <servlet-name>doc</servlet-name>
      <url-pattern>doc</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
      <servlet-name>doc</servlet-name>
      <url-pattern>doc.jsp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
      <servlet-name>logControl</servlet-name>
      <url-pattern>logControl</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>doc.jsp</welcome-file>
  </welcome-file-list>
    
</web-app>
